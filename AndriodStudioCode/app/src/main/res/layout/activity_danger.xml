<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangerActivity"
    android:id="@+id/drawer_layout">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2BC3E8"
            android:theme="@style/Theme.SamplePush">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nanumbarungothicbold"
                android:text="기록확인"
                android:textColor="@color/white"
                android:gravity="center|right"
                android:textSize="20sp" />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/dager_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:text="위험 상황 발생 기록"
            android:fontFamily="@font/nanumbarungothicbold"
            android:textColor="#2BC3E8"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/dager_report"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:background="#C8C8C8" />

        <TextView
            android:id="@+id/danger_header1"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_below="@+id/dager_report"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center|right"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/DangerView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/danger_header1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round2"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="2dp"
            android:scrollbarThumbVertical="@color/black"
            android:scrollbars="vertical"
            android:text="text"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/danger_header2"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_below="@+id/DangerView"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center"
            android:text="sdf"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/DangerView2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/danger_header2"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round2"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="2dp"
            android:scrollbarThumbVertical="@color/black"
            android:scrollbars="vertical"
            android:text="text"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/danger_header3"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_below="@+id/DangerView2"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/DangerView3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/danger_header3"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/round2"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="2dp"
            android:scrollbarThumbVertical="@color/black"
            android:scrollbars="vertical"
            android:text="text"
            android:textSize="15dp" />



        <LinearLayout
            android:id="@+id/llBottomContainer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#2BC3E8"
            android:gravity="bottom"
            android:orientation="vertical">



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/Button_home"
                android:drawableBottom="@drawable/ic_baseline_home_24"
                android:textColor="@color/white"
                android:text="HOME"
                app:backgroundTint="#2BC3E8">

            </Button>

        </LinearLayout>


    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navi_header"
        app:menu="@menu/navi_menu" />

</androidx.drawerlayout.widget.DrawerLayout>